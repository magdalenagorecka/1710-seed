{
  "name": "javascript-development-environment",
  "version": "1.0.0",
  "description": "My first JS dev env",
  "scripts": {
    "prestart": "babel-node buildScripts/startMessage.js",
    "start": "npm-run-all --parallel security-check open:src lint:watch test:watch sass",
    "open:src": "babel-node buildScripts/srcServer.js",
    "lint": "esw webpack.config.* src buildScripts --color",
    "lint:watch": "npm run lint -- --watch",
    "security-check": "nsp check",
    "localtunnel": "lt --port 3000",
    "share": "npm-run-all --parallel open-src localtunnel",
    "test": "mocha --reporter progress buildScripts/testSetup.js \"src/**/*.test.js\"",
    "test:watch": "npm run test -- --watch",
    "sass": "node-sass --output-style compressed -w scss/ -o src/",
    "autoprefixer": "postcss -u autoprefixer -r src/",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist test lint",
    "build": "babel-node buildScripts/build.js",
    "postbuild": "babel-node buildScripts/distServer.js",
    "deploy": "surge gi./dist"
  },
  "author": "Magdalena Gorecka",
  "license": "MIT",
  "dependencies": {
    "babel-autonode-loader": "^1.0.0",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "webpack-dev-middleware": "^1.12.0",
    "whatwg-fetch": "^1.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    }
  },
  "devDependencies": {
    "autoprefixer": "^7.1.5",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-preset-env": "^1.6.0",
    "babel-preset-latest": "6.16.0",
    "babel-register": "^6.16.3",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "cheerio": "0.22.0",
    "cross-env": "3.1.3",
    "css-loader": "^0.25.0",
    "eslint": "^3.19.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-watch": "^2.1.14",
    "express": "^4.16.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^2.22.0",
    "jsdom": "^9.8.0",
    "json-schema-faker": "^0.3.6",
    "json-server": "^0.8.23",
    "localtunnel": "1.8.1",
    "mocha": "^3.1.2",
    "nock": "8.1.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^3.1.1",
    "nsp": "2.6.2",
    "open": "0.0.5",
    "postcss-cli": "^4.1.1",
    "rimraf": "2.5.4",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.13.1",
    "webpack": "^3.6.0"
  }
}
